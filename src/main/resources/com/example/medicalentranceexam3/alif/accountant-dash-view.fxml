<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.paint.Color?>

<AnchorPane prefHeight="650.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.medicalentranceexam3.alif.AccountantDashViewController">

   <children>
      <!-- Top Title -->
      <Text layoutX="35" layoutY="60" text="Accountant Dashboard">
         <font>
            <Font name="Arial Black" size="30"/>
         </font>
      </Text>

      <!-- Card Container -->
      <StackPane layoutX="50" layoutY="90" prefWidth="800" prefHeight="500"
                 style="-fx-background-color: #ffffff; -fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: #dcdcdc; -fx-border-width: 1;">
         <effect>
            <DropShadow radius="10" color="#b5b5b5"/>
         </effect>

         <VBox spacing="25" alignment="CENTER">
            <padding>
               <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <!-- Row 1 -->
            <HBox spacing="40" alignment="CENTER">
               <Button text="ADD APPLICANT"
                       prefWidth="300" prefHeight="55"
                       onAction="#handleAddApplicantButton"
                       style="-fx-background-color: #1e1e1e; -fx-text-fill: white; -fx-background-radius: 12;">
                  <font>
                     <Font size="16"/>
                  </font>
               </Button>

               <Button text="EDIT APPLICANT INFO"
                       prefWidth="300" prefHeight="55"
                       onAction="#handleEditApplicantButton"
                       style="-fx-background-color: #1e1e1e; -fx-text-fill: white; -fx-background-radius: 12;">
                  <font>
                     <Font size="16"/>
                  </font>
               </Button>
            </HBox>

            <!-- Row 2 -->
            <HBox spacing="40" alignment="CENTER">
               <Button text="DELETE APPLICANT"
                       prefWidth="300" prefHeight="55"
                       onAction="#handleDeleteApplicant"
                       style="-fx-background-color: #1e1e1e; -fx-text-fill: white; -fx-background-radius: 12;">
                  <font>
                     <Font size="16"/>
                  </font>
               </Button>

               <Button text="UPDATE PAYMENT STATUS"
                       prefWidth="300" prefHeight="55"
                       onAction="#handleUpdatePaymentButton"
                       style="-fx-background-color: #1e1e1e; -fx-text-fill: white; -fx-background-radius: 12;">
                  <font>
                     <Font size="16"/>
                  </font>
               </Button>
            </HBox>

            <!-- Row 3 -->
            <HBox spacing="40" alignment="CENTER">
               <Button text="GENERATE ADMIT CARD"
                       prefWidth="300" prefHeight="55"
                       onAction="#handleGenerateAdmitButton"
                       style="-fx-background-color: #1e1e1e; -fx-text-fill: white; -fx-background-radius: 12;">
                  <font>
                     <Font size="16"/>
                  </font>
               </Button>

               <Button text="SEAT PLAN"
                       prefWidth="300" prefHeight="55"
                       onAction="#handleSeatPlanButton"
                       style="-fx-background-color: #1e1e1e; -fx-text-fill: white; -fx-background-radius: 12;">
                  <font>
                     <Font size="16"/>
                  </font>
               </Button>
            </HBox>

         </VBox>
      </StackPane>

      <!-- Logout Button -->
      <Button layoutX="760" layoutY="30"
              prefWidth="100" prefHeight="38"
              text="Log Out"
              onAction="#handleLogOutButton"
              style="-fx-background-color: white; -fx-border-color: black; -fx-border-radius: 12; -fx-background-radius: 12;">
         <font>
            <Font size="15"/>
         </font>
      </Button>

   </children>
</AnchorPane>
