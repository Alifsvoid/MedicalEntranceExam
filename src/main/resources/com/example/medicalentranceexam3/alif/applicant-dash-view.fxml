<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="650.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.medicalentranceexam3.alif.ApplicantDashViewController">
    <children>
        <!-- Top Title -->
        <Text layoutX="35" layoutY="60" text="Accountant Dashboard">
            <font>
                <Font name="Arial Black" size="30" />
            </font>
        </Text>

        <!-- Card Container -->
        <StackPane layoutX="50" layoutY="90" prefHeight="500" prefWidth="800" style="-fx-background-color: #ffffff; -fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: #dcdcdc; -fx-border-width: 1;">
            <effect>
                <DropShadow color="#b5b5b5" radius="10" />
            </effect>

            <VBox alignment="CENTER" spacing="25">
                <padding>
                    <Insets bottom="40" left="40" right="40" top="40" />
                </padding>

                <!-- Row 1 -->
                <HBox alignment="CENTER" spacing="40">
                    <Button onAction="#handleAddApplicantButton" prefHeight="55" prefWidth="300" style="-fx-background-color: #1e1e1e; -fx-text-fill: white; -fx-background-radius: 12;" text="APPLY">
                        <font>
                            <Font size="16" />
                        </font>
                    </Button>

                    <Button onAction="#handleEditApplicantButton" prefHeight="55" prefWidth="300" style="-fx-background-color: #1e1e1e; -fx-text-fill: white; -fx-background-radius: 12;" text="EDIT APPLICANT INFO">
                        <font>
                            <Font size="16" />
                        </font>
                    </Button>
                </HBox>

                <!-- Row 2 -->
                <HBox alignment="CENTER" spacing="40">
                    <Button onAction="#handleDeleteApplicant" prefHeight="55" prefWidth="300" style="-fx-background-color: #1e1e1e; -fx-text-fill: white; -fx-background-radius: 12;" text="DELETE APPLICANT">
                        <font>
                            <Font size="16" />
                        </font>
                    </Button>

                    <Button onAction="#handleUpdatePaymentButton" prefHeight="55" prefWidth="300" style="-fx-background-color: #1e1e1e; -fx-text-fill: white; -fx-background-radius: 12;" text="UPDATE PAYMENT STATUS">
                        <font>
                            <Font size="16" />
                        </font>
                    </Button>
                </HBox>

                <!-- Row 3 -->
                <HBox alignment="CENTER" spacing="40">
                    <Button onAction="#handleGenerateAdmitButton" prefHeight="55" prefWidth="300" style="-fx-background-color: #1e1e1e; -fx-text-fill: white; -fx-background-radius: 12;" text="GENERATE ADMIT CARD">
                        <font>
                            <Font size="16" />
                        </font>
                    </Button>

                    <Button onAction="#handleSeatPlanButton" prefHeight="55" prefWidth="300" style="-fx-background-color: #1e1e1e; -fx-text-fill: white; -fx-background-radius: 12;" text="SEAT PLAN">
                        <font>
                            <Font size="16" />
                        </font>
                    </Button>
                </HBox>

                <HBox alignment="CENTER" spacing="40">
                    <Button onAction="#handleNotificaitonButton" prefHeight="55" prefWidth="300" style="-fx-background-color: #1e1e1e; -fx-text-fill: white; -fx-background-radius: 12;" text="SEND NOTIFICATION">
                        <font>
                            <Font size="16" />
                        </font>
                    </Button>

                    <Button onAction="#handleAppliedApplicantButton" prefHeight="55" prefWidth="300" style="-fx-background-color: #1e1e1e; -fx-text-fill: white; -fx-background-radius: 12;" text="APPLIED APPLICANT">
                        <font>
                            <Font size="16" />
                        </font>
                    </Button>
                </HBox>

            </VBox>
        </StackPane>

        <!-- Logout Button -->
        <Button layoutX="760" layoutY="30" onAction="#handleLogOutButton" prefHeight="38" prefWidth="100" style="-fx-background-color: white; -fx-border-color: black; -fx-border-radius: 12; -fx-background-radius: 12;" text="Log Out">
            <font>
                <Font size="15" />
            </font>
        </Button>

    </children>
</AnchorPane>
