<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="650" prefWidth="900" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.medicalentranceexam3.alif.AdmitCardViewController">

   <children>

      <!-- Title -->
      <Text layoutX="50" layoutY="60" text="Generate Admit Card">
         <font>
            <Font name="Arial Black" size="28" />
         </font>
      </Text>

      <!-- CARD PANEL -->
      <StackPane layoutX="50" layoutY="80" prefHeight="500" prefWidth="800" style="-fx-background-color: #ffffff; -fx-background-radius: 20;                           -fx-border-radius: 20; -fx-border-color: #dcdcdc; -fx-border-width: 1;">
         <effect>
            <DropShadow color="#b5b5b5" radius="12" />
         </effect>

         <VBox alignment="TOP_CENTER" spacing="25">
            <padding>
               <Insets bottom="25" left="40" right="40" top="25" />
            </padding>

            <!-- FORM SECTION -->
            <VBox prefWidth="700" spacing="20">

               <!-- Row 1 -->
               <HBox spacing="20">
                  <VBox spacing="5">
                     <Text text="Card ID:" />
                     <TextField fx:id="cardID" prefWidth="250" style="-fx-background-radius: 10; -fx-padding: 8" />
                  </VBox>

                  <VBox spacing="5">
                     <Text text="Applicant Name:" />
                     <TextField fx:id="applicantName" prefWidth="250" style="-fx-background-radius: 10; -fx-padding: 8" />
                  </VBox>
               </HBox>

               <!-- Row 2 -->
               <HBox spacing="20">
                  <VBox spacing="5">
                     <Text text="Exam ID:" />
                     <TextField fx:id="examID" prefWidth="250" style="-fx-background-radius: 10; -fx-padding: 8" />
                  </VBox>

                  <VBox spacing="5">
                     <Text text="Seat Number:" />
                     <TextField fx:id="seatNumber" prefWidth="250" style="-fx-background-radius: 10; -fx-padding: 8" />
                  </VBox>
               </HBox>

               <!-- Row 3 -->
               <HBox spacing="20">
                  <VBox spacing="5">
                     <Text text="Exam Center:" />
                     <TextField fx:id="examCenter" prefWidth="250" style="-fx-background-radius: 10; -fx-padding: 8" />
                  </VBox>

                  <VBox spacing="5">
                     <Text text="Exam Date:" />
                     <DatePicker fx:id="examDatePicker" prefWidth="250" style="-fx-background-radius: 10" />
                  </VBox>
               </HBox>

               <!-- Button -->
               <HBox alignment="CENTER_RIGHT">
                  <Button onAction="#handleGenerateButton" prefHeight="40" prefWidth="180" style="-fx-background-color: #1e1e1e;                                        -fx-background-radius: 12;                                        -fx-text-fill: white;" text="GENERATE">
                     <font>
                        <Font size="14" />
                     </font>
                  </Button>
               </HBox>

            </VBox>

            <!-- TABLE -->
            <TableView fx:id="aplicantTableView" prefHeight="260" prefWidth="720" style="-fx-background-radius: 10; -fx-border-color: #d0d0d0;                                   -fx-border-radius: 10;">

               <columns>
                  <TableColumn fx:id="cardIDCol" prefWidth="90" text="Card ID" />
                  <TableColumn fx:id="examIDCol" prefWidth="110" text="Exam ID" />
                  <TableColumn fx:id="nameCol" prefWidth="170" text="Name" />
                  <TableColumn fx:id="seatNumCol" prefWidth="110" text="Seat Number" />
                  <TableColumn fx:id="centerCol" prefWidth="150" text="Center" />
                  <TableColumn fx:id="dateCol" prefWidth="140" text="Date" />
               </columns>

            </TableView>

         </VBox>

      </StackPane>

      <!-- Back Button -->
      <Button layoutX="50" layoutY="600" onAction="#handleBackButton" prefHeight="36" prefWidth="90" style="-fx-background-color: #1e1e1e; -fx-background-radius: 10; -fx-text-fill: white;" text="Back">
         <font>
            <Font size="14" />
         </font>
      </Button>

   </children>

</AnchorPane>
