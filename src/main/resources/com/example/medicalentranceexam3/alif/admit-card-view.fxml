<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.effect.DropShadow?>

<AnchorPane prefHeight="650" prefWidth="900"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.medicalentranceexam3.alif.AdmitCardViewController">

   <children>

      <!-- Page Title -->
      <Text layoutX="50" layoutY="60" text="Generate Admit Card">
         <font>
            <Font name="Arial Black" size="28"/>
         </font>
      </Text>

      <!-- CENTER CARD -->
      <StackPane layoutX="50" layoutY="80" prefWidth="800" prefHeight="500"
                 style="-fx-background-color: #ffffff; -fx-background-radius: 20;
                          -fx-border-radius: 20; -fx-border-color: #dcdcdc; -fx-border-width: 1;">
         <effect>
            <DropShadow radius="10" color="#b5b5b5"/>
         </effect>

         <VBox spacing="20" alignment="TOP_CENTER">
            <padding>
               <Insets top="25" left="40" right="40" bottom="25"/>
            </padding>

            <!-- FORM -->
            <VBox spacing="15" prefWidth="700">

               <HBox spacing="20">
                  <VBox spacing="5">
                     <Text text="Card ID:"/>
                     <TextField fx:id="cardID" prefWidth="250"
                                style="-fx-background-radius: 10; -fx-padding: 8;"/>
                  </VBox>

                  <VBox spacing="5">
                     <Text text="Applicant Name:"/>
                     <TextField fx:id="applicantName" prefWidth="250"
                                style="-fx-background-radius: 10; -fx-padding: 8;"/>
                  </VBox>
               </HBox>

               <HBox spacing="20">
                  <VBox spacing="5">
                     <Text text="Exam ID:"/>
                     <TextField fx:id="examID" prefWidth="250"
                                style="-fx-background-radius: 10; -fx-padding: 8;"/>
                  </VBox>

                  <VBox spacing="5">
                     <Text text="Seat Number:"/>
                     <TextField fx:id="seatNumber" prefWidth="250"
                                style="-fx-background-radius: 10; -fx-padding: 8;"/>
                  </VBox>
               </HBox>

               <HBox spacing="20">
                  <VBox spacing="5">
                     <Text text="Exam Center:"/>
                     <TextField fx:id="examCenter" prefWidth="250"
                                style="-fx-background-radius: 10; -fx-padding: 8;"/>
                  </VBox>

                  <VBox spacing="5">
                     <Text text="Exam Date:"/>
                     <DatePicker fx:id="examDatePicker" prefWidth="250"
                                 style="-fx-background-radius: 10;"/>
                  </VBox>
               </HBox>

               <HBox alignment="CENTER_RIGHT" spacing="20">
                  <Button text="GENERATE"
                          onAction="#handleGenerateButton"
                          prefWidth="180" prefHeight="40"
                          style="-fx-background-color: #1e1e1e; -fx-text-fill: white; -fx-background-radius: 12;">
                     <font>
                        <Font size="15"/>
                     </font>
                  </Button>
               </HBox>

            </VBox>

            <!-- TABLE -->
            <TableView fx:id="aplicantTableView" prefHeight="250" prefWidth="720"
                       style="-fx-background-radius: 10; -fx-border-color: #d0d0d0; -fx-border-radius: 10;">

               <columns>
                  <TableColumn fx:id="cardIDCol" text="Card ID" prefWidth="100"/>
                  <TableColumn fx:id="examIDCol" text="Exam ID" prefWidth="120"/>
                  <TableColumn fx:id="nameCol" text="Name" prefWidth="160"/>
                  <TableColumn fx:id="seatNumCol" text="Seat Number" prefWidth="100"/>
                  <TableColumn fx:id="centerCol" text="Center" prefWidth="150"/>
                  <TableColumn fx:id="dateCol" text="Date" prefWidth="150"/>
               </columns>

            </TableView>

         </VBox>
      </StackPane>

      <!-- Back Button -->
      <Button layoutX="50" layoutY="600" prefWidth="90" prefHeight="36"
              onAction="#handleBackButton"
              text="Back"
              style="-fx-background-color: #1e1e1e; -fx-text-fill: white; -fx-background-radius: 10;">
         <font>
            <Font size="14"/>
         </font>
      </Button>

   </children>
</AnchorPane>
