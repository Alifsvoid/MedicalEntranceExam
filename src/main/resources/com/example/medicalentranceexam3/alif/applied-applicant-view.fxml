<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="650.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.medicalentranceexam3.alif.AppliedApplicantController">

    <children>

        <!-- Filter Status -->
        <Text layoutX="50.0" layoutY="40.0" text="Filter Status:"/>
        <ComboBox fx:id="filterStatusComboBox" layoutX="140.0" layoutY="20.0" prefWidth="150.0"/>
        <Button layoutX="310.0" layoutY="20.0" text="Filter" onAction="#handleFilterButton"
                style="-fx-background-color: black;" textFill="WHITE" prefWidth="80.0" prefHeight="26.0"/>

        <!-- Table -->
        <TableView fx:id="appliedExamTableView" layoutX="50.0" layoutY="70.0" prefWidth="800.0" prefHeight="400.0">
            <columns>
                <TableColumn fx:id="applicationIDCol" text="Application ID" prefWidth="120.0"/>
                <TableColumn fx:id="applicantIDCol" text="Applicant ID" prefWidth="120.0"/>
                <TableColumn fx:id="applicantNameCol" text="Applicant Name" prefWidth="150.0"/>
                <TableColumn fx:id="examIDCol" text="Exam ID" prefWidth="100.0"/>
                <TableColumn fx:id="examNameCol" text="Exam Name" prefWidth="150.0"/>
                <TableColumn fx:id="applicationDateCol" text="Application Date" prefWidth="120.0"/>
                <TableColumn fx:id="statusCol" text="Status" prefWidth="100.0"/>
            </columns>
        </TableView>

        <!-- Update Status -->
        <Text layoutX="50.0" layoutY="500.0" text="Application ID:"/>
        <TextField fx:id="applicationIDTextField" layoutX="160.0" layoutY="480.0" prefWidth="150.0" prefHeight="26.0"/>

        <Text layoutX="350.0" layoutY="500.0" text="Set Status:"/>
        <ComboBox fx:id="statusComboBox" layoutX="430.0" layoutY="480.0" prefWidth="150.0"/>

        <Button layoutX="600.0" layoutY="480.0" text="Update Status" onAction="#handleUpdateStatusButton"
                style="-fx-background-color: black;" textFill="WHITE" prefWidth="120.0" prefHeight="26.0"/>

        <!-- Back Button -->
        <Button layoutX="50.0" layoutY="580.0" text="Back" onAction="#handleBackButton"
                style="-fx-background-color: black;" textFill="WHITE" prefWidth="80.0" prefHeight="30.0"/>
    </children>
</AnchorPane>
