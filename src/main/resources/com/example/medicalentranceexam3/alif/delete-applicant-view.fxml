<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.effect.DropShadow?>

<AnchorPane prefHeight="650" prefWidth="900"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.medicalentranceexam3.alif.DeleteApplicantViewController">

   <children>

      <!-- Title -->
      <Text layoutX="50" layoutY="60" text="Delete Applicant">
         <font>
            <Font name="Arial Black" size="28"/>
         </font>
      </Text>

      <!-- Card Panel -->
      <StackPane layoutX="50" layoutY="90" prefWidth="800" prefHeight="500"
                 style="-fx-background-color: #ffffff; -fx-background-radius: 20;
                          -fx-border-radius: 20; -fx-border-color: #dcdcdc; -fx-border-width: 1;">
         <effect>
            <DropShadow radius="10" color="#b5b5b5"/>
         </effect>

         <VBox spacing="25" alignment="TOP_CENTER">
            <padding>
               <Insets top="25" left="40" right="40" bottom="25"/>
            </padding>

            <!-- Form Row -->
            <HBox spacing="20">
               <VBox spacing="5">
                  <Text text="Applicant ID:"/>
                  <TextField fx:id="applicantIDTextField" prefWidth="250"
                             style="-fx-background-radius: 10; -fx-padding: 8"/>
               </VBox>

               <VBox spacing="5" alignment="BOTTOM_CENTER">
                  <Button text="DELETE"
                          onAction="#handleDeleteButton"
                          prefWidth="150" prefHeight="40"
                          style="-fx-background-color: #1e1e1e; -fx-text-fill: white; -fx-background-radius: 12;">
                     <font>
                        <Font size="14"/>
                     </font>
                  </Button>
               </VBox>
            </HBox>

            <!-- Table -->
            <TableView fx:id="aplicantTableView" prefHeight="300" prefWidth="720"
                       style="-fx-background-radius: 10; -fx-border-color: #d0d0d0; -fx-border-radius: 10;">

               <columns>
                  <TableColumn fx:id="idCol" prefWidth="80" text="ID"/>
                  <TableColumn fx:id="nameCol" prefWidth="150" text="Name"/>
                  <TableColumn fx:id="phoneNumCol" prefWidth="180" text="Phone Number"/>
                  <TableColumn fx:id="emailCol" prefWidth="180" text="Email"/>
                  <TableColumn fx:id="dobCol" prefWidth="130" text="Date Of Birth"/>
               </columns>

            </TableView>

         </VBox>

      </StackPane>

      <!-- Back Button -->
      <Button layoutX="50" layoutY="600"
              prefWidth="90" prefHeight="36"
              text="Back"
              onAction="#handleBackButton"
              style="-fx-background-color: #1e1e1e; -fx-background-radius: 10; -fx-text-fill: white;">
         <font>
            <Font size="14"/>
         </font>
      </Button>

   </children>
</AnchorPane>
