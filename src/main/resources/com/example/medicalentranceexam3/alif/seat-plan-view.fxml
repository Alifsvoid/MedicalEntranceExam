<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="650.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.medicalentranceexam3.alif.SeatPlanViewController">

    <children>

        <!-- Input Fields -->
        <TextField fx:id="seatNumberTextField" layoutX="156.0" layoutY="37.0" prefHeight="26.0" prefWidth="180.0" />
        <TextField fx:id="examCenterTextField" layoutX="156.0" layoutY="77.0" prefHeight="26.0" prefWidth="180.0" />
        <TextField fx:id="applicantIDTextField" layoutX="156.0" layoutY="117.0" prefHeight="26.0" prefWidth="180.0" />
        <TextField fx:id="applicantNameTextField" layoutX="156.0" layoutY="157.0" prefHeight="26.0" prefWidth="180.0" />

        <!-- Labels -->
        <Text layoutX="57.0" layoutY="55.0" text="Seat Number:" />
        <Text layoutX="59.0" layoutY="95.0" text="Exam Center:" />
        <Text layoutX="60.0" layoutY="135.0" text="Applicant ID:" />
        <Text layoutX="60.0" layoutY="175.0" text="Applicant Name:" />

        <!-- Add Button -->
        <Button layoutX="391.0" layoutY="120.0" onAction="#handleAddSeatPlanButton" prefHeight="58.0" prefWidth="214.0" style="-fx-background-color: black;" text="ADD SEAT PLAN" textFill="WHITE">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>

        <!-- Table -->
        <TableView fx:id="seatPlanTableView" layoutX="80.0" layoutY="250.0" prefHeight="300.0" prefWidth="726.0">
            <columns>
                <TableColumn fx:id="seatNumberCol" prefWidth="150.0" text="Seat Number" />
                <TableColumn fx:id="examCenterCol" prefWidth="180.0" text="Exam Center" />
                <TableColumn fx:id="applicantIDCol" prefWidth="180.0" text="Applicant ID" />
                <TableColumn fx:id="applicantNameCol" prefWidth="200.0" text="Applicant Name" />
            </columns>
        </TableView>

        <!-- Back Button -->
        <Button layoutX="40.0" layoutY="580.0" onAction="#handleBackButton" prefHeight="34.0" prefWidth="88.0" style="-fx-background-color: black;" text="Back" textFill="WHITE">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>

    </children>
</AnchorPane>
