<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="650.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.medicalentranceexam3.alif.NotificationViewController">

    <children>

        <!-- Input Fields -->
        <TextField fx:id="notificationIDTextField" layoutX="160.0" layoutY="37.0" prefWidth="180.0" prefHeight="26.0"/>
        <TextField fx:id="applicantIDTextField" layoutX="160.0" layoutY="77.0" prefWidth="180.0" prefHeight="26.0"/>
        <TextArea fx:id="messageTextArea" layoutX="160.0" layoutY="117.0" prefWidth="300.0" prefHeight="80.0"/>

        <!-- Labels -->
        <Text layoutX="80.0" layoutY="55.0" text="Notification ID:"/>
        <Text layoutX="80.0" layoutY="95.0" text="Applicant ID:"/>
        <Text layoutX="80.0" layoutY="150.0" text="Message:"/>

        <!-- Add Button -->
        <Button layoutX="500.0" layoutY="120.0"
                prefWidth="180.0" prefHeight="58.0"
                text="ADD NOTIFICATION" textFill="WHITE"
                style="-fx-background-color: black;"
                onAction="#handleAddNotificationButton">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </Button>

        <!-- Table -->
        <TableView fx:id="notificationTableView"
                   layoutX="80.0" layoutY="220.0"
                   prefWidth="740.0" prefHeight="350.0">
            <columns>
                <TableColumn fx:id="notificationIDCol" text="Notification ID" prefWidth="120.0"/>
                <TableColumn fx:id="applicantIDCol" text="Applicant ID" prefWidth="120.0"/>
                <TableColumn fx:id="messageCol" text="Message" prefWidth="350.0"/>
                <TableColumn fx:id="timestampCol" text="Timestamp" prefWidth="150.0"/>
            </columns>
        </TableView>

        <!-- Back Button -->
        <Button layoutX="40.0" layoutY="580.0"
                prefWidth="88.0" prefHeight="34.0"
                text="Back" textFill="WHITE"
                style="-fx-background-color: black;"
                onAction="#handleBackButton">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </Button>

    </children>
</AnchorPane>
