<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="650" prefWidth="900" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.medicalentranceexam3.alif.AddApplicantViewController">

    <children>

        <!-- Title -->
        <Text layoutX="50" layoutY="60" text="Add New Applicant">
            <font>
                <Font name="Arial Black" size="28" />
            </font>
        </Text>

        <!-- CARD PANEL -->
        <StackPane layoutX="50" layoutY="80" prefHeight="500" prefWidth="800" style="-fx-background-color: #ffffff; -fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: #dcdcdc; -fx-border-width: 1;">
            <effect>
                <DropShadow color="#b5b5b5" radius="10" />
            </effect>

            <VBox alignment="TOP_CENTER" spacing="20">
                <padding>
                    <Insets bottom="25" left="40" right="40" top="25" />
                </padding>

                <!-- FORM -->
                <VBox prefWidth="700" spacing="15">

                    <HBox spacing="20">
                        <VBox spacing="5">
                            <Text text="Applicant ID:" />
                            <TextField fx:id="applicantIDTextField" prefWidth="250" style="-fx-background-radius: 10; -fx-padding: 8;" />
                        </VBox>

                        <VBox spacing="5">
                            <Text text="Name:" />
                            <TextField fx:id="nameTextField" prefWidth="250" style="-fx-background-radius: 10; -fx-padding: 8;" />
                        </VBox>
                  <Text text="Pass:" />
                  <PasswordField fx:id="passwordTextField" prefHeight="35.0" prefWidth="195.0" />
                    </HBox>

                    <HBox spacing="20">
                        <VBox spacing="5">
                            <Text text="Phone:" />
                            <TextField fx:id="phoneTextField" prefWidth="250" style="-fx-background-radius: 10; -fx-padding: 8;" />
                        </VBox>

                        <VBox spacing="5">
                            <Text text="Email:" />
                            <TextField fx:id="emailTextField" prefWidth="250" style="-fx-background-radius: 10; -fx-padding: 8;" />
                        </VBox>
                    </HBox>

                    <HBox spacing="20">
                        <VBox spacing="5">
                            <Text text="Date of Birth:" />
                            <DatePicker fx:id="dobDatePicker" prefWidth="250" style="-fx-background-radius: 10;" />
                        </VBox>

                        <VBox alignment="BOTTOM_CENTER" spacing="5">
                            <Button onAction="#handleAddApplicantButton" prefHeight="45" prefWidth="220" style="-fx-background-color: #1e1e1e; -fx-text-fill: white; -fx-background-radius: 12;" text="ADD APPLICANT">
                                <font>
                                    <Font size="15" />
                                </font>
                            </Button>
                        </VBox>
                    </HBox>

                </VBox>

                <!-- TABLE -->
                <TableView fx:id="aplicantTableView" prefHeight="250" prefWidth="720" style="-fx-background-radius: 10; -fx-border-color: #d0d0d0; -fx-border-radius: 10;">

                    <columns>
                        <TableColumn fx:id="idCol" prefWidth="100" text="ID" />
                        <TableColumn fx:id="nameCol" prefWidth="133.6000518798828" text="Name" />
                        <TableColumn fx:id="phoneNumCol" prefWidth="180.79998779296875" text="Phone Number" />
                        <TableColumn fx:id="emailCol" prefWidth="172.00003051757812" text="Email" />
                        <TableColumn fx:id="dobCol" prefWidth="174.39996337890625" text="Date Of Birth" />
                    </columns>

                </TableView>

            </VBox>

        </StackPane>

        <!-- Back Button -->
        <Button layoutX="50" layoutY="600" onAction="#handleBackButton" prefHeight="36" prefWidth="90" style="-fx-background-color: #1e1e1e; -fx-text-fill: white; -fx-background-radius: 10;" text="Back">
            <font>
                <Font size="14" />
            </font>
        </Button>

    </children>
</AnchorPane>
