<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="550.0" prefWidth="750.0"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.medicalentranceexam3.sabbir.ModifyMarksView">

    <children>

        <!-- Back Button -->
        <Button text="â† Back"
                layoutX="20" layoutY="20"
                fx:id="backButton"
                onAction="#handleBackButton"
                style="-fx-background-color: #06A3DA; -fx-text-fill: white; -fx-background-radius: 8;"/>

        <!-- Main Layout -->
        <VBox alignment="TOP_CENTER"
              spacing="20"
              layoutX="0" layoutY="60"
              prefWidth="750">

            <!-- Title -->
            <Text text="Modify Marks After Cross-check Approval"
                  style="-fx-font-size: 24px; -fx-font-weight: bold;" />

            <!-- Card Container -->
            <VBox spacing="15" maxWidth="700"
                  style="-fx-background-color: white;
                         -fx-padding: 20;
                         -fx-background-radius: 12;">

                <children>

                    <!-- Candidate Info -->
                    <GridPane hgap="15" vgap="12">
                        <columnConstraints>
                            <ColumnConstraints prefWidth="150"/>
                            <ColumnConstraints prefWidth="300"/>
                        </columnConstraints>

                        <Label text="Candidate ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="candidateIdField" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="candidateNameField" editable="false" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                    </GridPane>

                    <!-- Table of Questions and Marks -->
                    <TableView fx:id="marksTable" prefHeight="220">
                        <columns>
                            <TableColumn fx:id="questionCol" text="Question" prefWidth="150"/>
                            <TableColumn fx:id="previousMarksCol" text="Previous Marks" prefWidth="120"/>
                            <TableColumn fx:id="updatedMarksCol" text="Updated Marks" prefWidth="120"/>
                        </columns>
                    </TableView>

                    <!-- Correction Notes -->
                    <VBox spacing="8">
                        <children>
                            <Label text="Correction Notes:" style="-fx-font-weight: bold;"/>
                            <TextArea fx:id="notesField" prefHeight="80" promptText="Enter notes for modification"/>
                        </children>
                    </VBox>

                    <!-- Action Buttons -->
                    <HBox alignment="CENTER" spacing="20">
                        <children>
                            <Button text="Save Changes" fx:id="saveButton"
                                    style="-fx-background-color: #4E6BFF; -fx-text-fill: white; -fx-background-radius: 10;"/>
                            <Button text="Submit Final" fx:id="submitButton"
                                    style="-fx-background-color: #2EC971; -fx-text-fill: white; -fx-background-radius: 10;"/>
                        </children>
                    </HBox>

                </children>
            </VBox>

        </VBox>

    </children>

</AnchorPane>
