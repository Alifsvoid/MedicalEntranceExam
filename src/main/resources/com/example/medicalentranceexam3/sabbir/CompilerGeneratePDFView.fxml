<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="550.0" prefWidth="720.0"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.medicalentranceexam3.sabbir.CompilerGeneratePDFView">

    <children>

        <Button text="â† Back"
                layoutX="20" layoutY="20"
                fx:id="backButton"
                onAction="#handleBackButton"
                style="-fx-background-color: #06A3DA; -fx-text-fill: white; -fx-background-radius: 8;"/>

        <VBox alignment="TOP_CENTER"
              spacing="20"
              layoutX="0" layoutY="50"
              prefWidth="720">

            <Text text="Generate PDF Result Summary Report"
                  style="-fx-font-size: 24px; -fx-font-weight: bold;" />

            <VBox spacing="15" maxWidth="650"
                  style="-fx-background-color: white;
                         -fx-padding: 20;
                         -fx-background-radius: 12;">

                <children>

                    <TableView fx:id="finalResultTable" prefHeight="350">
                        <columns>
                            <TableColumn fx:id="candidateIdCol" text="Candidate ID" prefWidth="120"/>
                            <TableColumn fx:id="nameCol" text="Name" prefWidth="200"/>
                            <TableColumn fx:id="marksCol" text="Total Marks" prefWidth="120"/>
                            <TableColumn fx:id="rankCol" text="Rank" prefWidth="120"/>
                        </columns>
                    </TableView>

                    <HBox alignment="CENTER" spacing="20">
                        <children>
                            <Button text="Generate PDF" fx:id="generatePDFButton"
                                    style="-fx-background-color: #4E6BFF; -fx-text-fill: white; -fx-background-radius: 10;"/>
                            <Button text="Refresh" fx:id="refreshButton"
                                    style="-fx-background-color: #FFB74D; -fx-text-fill: white; -fx-background-radius: 10;"/>
                        </children>
                    </HBox>

                </children>
            </VBox>

        </VBox>

    </children>
</AnchorPane>
