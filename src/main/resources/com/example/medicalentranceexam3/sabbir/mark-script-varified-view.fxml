<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="520.0" prefWidth="720.0"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.medicalentranceexam3.sabbir.MarkScriptVerifiedView">

    <children>

        <!-- Back Button -->
        <Button text="â† Back"
                layoutX="20" layoutY="20"
                fx:id="backButton"
                onAction="#handleBackButton"
                style="-fx-background-color: #FF8C42; -fx-text-fill: white; -fx-background-radius: 8;"/>

        <!-- Main Layout -->
        <VBox alignment="TOP_CENTER"
              spacing="20"
              layoutX="0" layoutY="50"
              prefWidth="720">

            <!-- Page Title -->
            <Text text="Mark Script as Fully Verified"
                  style="-fx-font-size: 24px; -fx-font-weight: bold;" />

            <!-- Candidate Info Card -->
            <VBox spacing="12" maxWidth="600"
                  style="-fx-background-color: #f0f4f7; -fx-padding: 20; -fx-background-radius: 12;">

                <children>
                    <Label text="Candidate Information"
                           style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

                    <GridPane hgap="15" vgap="12">
                        <columnConstraints>
                            <ColumnConstraints prefWidth="150"/>
                            <ColumnConstraints prefWidth="300"/>
                        </columnConstraints>

                        <Label text="Candidate ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="candidateIdField" editable="false"
                                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="candidateNameField" editable="false"
                                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Exam Type:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="examTypeField" editable="false"
                                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    </GridPane>
                </children>
            </VBox>

            <!-- Verification Section -->
            <VBox spacing="15" maxWidth="600"
                  style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-background-radius: 12;">

                <children>

                    <Label text="Verification Status" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>

                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <children>
                            <CheckBox fx:id="verifiedCheckBox" text="Mark as Verified"
                                      style="-fx-font-size: 14px;"/>
                            <Label fx:id="statusLabel" text="Pending" style="-fx-text-fill: #FF8C42; -fx-font-weight: bold;"/>
                        </children>
                    </HBox>

                    <!-- Action Buttons -->
                    <HBox alignment="CENTER" spacing="20">
                        <children>
                            <Button text="Submit Verification" fx:id="submitButton"
                                    style="-fx-background-color: #2EC971; -fx-text-fill: white; -fx-background-radius: 10;"/>
                            <Button text="Reset" fx:id="resetButton"
                                    style="-fx-background-color: #FFB74D; -fx-text-fill: white; -fx-background-radius: 10;"/>
                        </children>
                    </HBox>

                </children>
            </VBox>

        </VBox>

    </children>
</AnchorPane>
