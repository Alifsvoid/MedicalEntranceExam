<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="520.0" prefWidth="720.0"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.medicalentranceexam3.sabbir.RequestReevaluationView">

    <children>

        <!-- Back Button -->
        <Button text="â† Back"
                layoutX="20" layoutY="20"
                fx:id="backButton"
                onAction="#handleBackButton" />

        <!-- Main Layout -->
        <VBox alignment="TOP_CENTER"
              spacing="20"
              layoutX="0" layoutY="50"
              prefWidth="720">

            <!-- Title -->
            <Text text="Request Re-evaluation"
                  style="-fx-font-size: 24px; -fx-font-weight: bold;" />

            <!-- Card Container -->
            <VBox spacing="20" maxWidth="650"
                  style="-fx-background-color: white;
                         -fx-padding: 20;
                         -fx-background-radius: 10;">

                <children>

                    <!-- Candidate Info Section -->
                    <GridPane hgap="15" vgap="12">
                        <columnConstraints>
                            <ColumnConstraints prefWidth="150"/>
                            <ColumnConstraints prefWidth="280"/>
                        </columnConstraints>

                        <Label text="Candidate ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="candidateIdField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="candidateNameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Exam Type:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="examTypeField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    </GridPane>

                    <!-- Re-evaluation Details -->
                    <VBox spacing="12">
                        <children>
                            <Label text="Questions / Issues for Re-evaluation:"
                                   style="-fx-font-weight: bold;"/>
                            <TextArea fx:id="issuesField" prefHeight="120"
                                      promptText="List questions or details for re-evaluation"/>

                            <Label text="Additional Comments:" style="-fx-font-weight: bold;"/>
                            <TextArea fx:id="commentsField" prefHeight="80"
                                      promptText="Provide any additional notes"/>
                        </children>
                    </VBox>

                    <!-- Action Buttons -->
                    <HBox alignment="CENTER" spacing="20">
                        <children>
                            <Button text="Submit Request" fx:id="submitButton"/>
                            <Button text="Reset Form" fx:id="resetButton"/>
                        </children>
                    </HBox>

                </children>

            </VBox>

        </VBox>

    </children>

</AnchorPane>
