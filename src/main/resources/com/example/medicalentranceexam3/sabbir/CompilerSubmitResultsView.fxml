<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="720.0"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.medicalentranceexam3.sabbir.CompilerSubmitResultsView">

    <children>

        <Button text="â† Back"
                layoutX="20" layoutY="20"
                fx:id="backButton"
                onAction="#handleBackButton"
                style="-fx-background-color: #06A3DA; -fx-text-fill: white; -fx-background-radius: 8;"/>

        <VBox alignment="TOP_CENTER"
              spacing="20"
              layoutX="0" layoutY="50"
              prefWidth="720">

            <Text text="Submit Final Results to Ministry Database"
                  style="-fx-font-size: 24px; -fx-font-weight: bold;" />

            <VBox spacing="15" maxWidth="650"
                  style="-fx-background-color: white;
                         -fx-padding: 20;
                         -fx-background-radius: 12;">

                <children>

                    <GridPane hgap="15" vgap="12">
                        <columnConstraints>
                            <ColumnConstraints prefWidth="180"/>
                            <ColumnConstraints prefWidth="300"/>
                        </columnConstraints>

                        <Label text="Clearance Status:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="clearanceField" editable="false"
                                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Authorized By:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="authorizedByField" editable="false"
                                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Submission Timestamp:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="timestampField" editable="false"
                                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    </GridPane>

                    <HBox alignment="CENTER" spacing="20">
                        <children>
                            <Button text="Submit Results" fx:id="submitButton"
                                    style="-fx-background-color: #4E6BFF; -fx-text-fill: white; -fx-background-radius: 10;"/>
                            <Button text="Refresh" fx:id="refreshButton"
                                    style="-fx-background-color: #FFB74D; -fx-text-fill: white; -fx-background-radius: 10;"/>
                        </children>
                    </HBox>

                </children>
            </VBox>

        </VBox>

    </children>
</AnchorPane>
